---
import React from '../components/icons/React.astro'
import Html from '../components/icons/Html.astro'
import CSS from '../components/icons/CSS.astro'


const tags = {
    REACT: {
        name: 'React',
        class: 'bg-black text-white',
        icon: React
    },
    HTML: {
        name: 'HTML',
        class: 'bg-black text-white',
        icon: Html
    },
    CSS: {
        name: 'CSS',
        class: 'bg-black text-white',
        icon: CSS
    }
}

const projects = [
    {
        title: 'Project',
        description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: [tags.HTML, tags.CSS, tags.REACT]
    },
    {
        title: 'Project',
        description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: [tags.HTML, tags.REACT]
    },
    {
        title: 'Project',
        description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: [tags.HTML, tags.REACT]
    },
]

---

{projects.map(({ title, description, tags, image }) => (
    <article class="pb-8">
        <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-3 pb-5">
            {tags.map(tag => (
                <li>
                    <span class={`flex items-center gap-1 rounded-full text-xs ${tag.class} py-1 px-3`}>
                        <tag.icon class="size-4"/>
                        {tag.name}
                    </span>
                </li>
            ))}
        </ul>
        <img class="rounded shadow-2xl shadow-white/10" src={image} alt="iagen del proyecto"/>
    </article>
))}